<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTimePickerDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Header / akcent -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/black_primary</item>
        <item name="colorAccent">@color/blue_primary_variant</item>

        <!-- Tło dialogu -->
        <item name="android:windowBackground">@color/surface_dark</item>
        <item name="backgroundTint">@color/surface_dark</item>

        <!-- Teksty -->
        <item name="android:textColorPrimary">@color/white_primary</item>
        <item name="android:textColorSecondary">@color/gray_primary</item>

        <!-- Kontrolki (spinnery, suwaki) -->
        <item name="colorControlActivated">@color/blue_primary</item>
        <item name="colorControlNormal">@color/gray_primary</item>
        <item name="colorControlHighlight">@color/blue_primary_variant</item>

    </style>
